<!DOCTYPE html>
<html>
<head>
  <title>My Diary</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
  	<div class="navbar-inner">
      <div class="container" id="navbar">
        <a href="#" class="brand">Diary</a>
        <div class="nav-collapse">
        	<ul class="nav">
        		<li> <%= link_to t(:home), root_path %> </li>
        		<li> <%= link_to t(:browse), diaries_path %> </li>
            <li> <%= link_to t(:add_note), new_diary_path %> </li>
        	</ul>
        </div>
        <% if current_user %>
          <ul class="nav pull-right">
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=current_user.email %> <b class="caret"></b></a>
            
              <ul class="dropdown-menu">
                <li><%= link_to t(:user_profile), edit_user_registration_path,:class=>"first" %></li>
                <li><%= link_to t(:logout), destroy_user_session_path, :method=>"DELETE", :class=>"last" %></li>
              </ul>
            </li>
          </ul>
        <% end %>
      </div>
  	</div>
  </div>

  <div class="container">
    <% if notice %>
      <div class="alert alert-success">
        <button class="close" data-dismiss="alert">×</button>
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert">
        <button class="close" data-dismiss="alert">×</button>
        <%= alert %>
      </div> 
    <% end %>
  <%= yield %>
  </div>

</body>
</html>
