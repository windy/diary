<!DOCTYPE html>
<html>
<head>
  <title>My Diary</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
  	<div class="navbar-inner">
      <div class="container">
        <a href="#" class="brand">Diary</a>
        <div class="nav-collapse">
        	<ul class="nav">
        		<li> <%= link_to t(:home), root_path %> </li>
        		<li> <%= link_to t(:browse), diaries_path %> </li>
            <li> <%= link_to t(:add_note), new_diary_path %> </li>
        	</ul>
        </div>
        <% if current_user %>
          <ul class="nav pull-right">
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=current_user.email %></a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:user_profile), edit_user_registration_path,:class=>"first" %></li>
                <li><%= link_to t(:logout), destroy_user_session_path, :method=>"DELETE", :class=>"last" %></li>
              </ul>
            </li>
          </ul>
        <% end %>
      </div>
  	</div>
  </div>

  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert"><%= alert %></p> 
  <% end %>
<%= yield %>

</body>
</html>
